{
  "name": "modernradiofm975",
  "version": "1.0.0",
  "description": "A client for Modern Radio FM975",
  "main": "main.js",
  "scripts": {
    "clean": "rm -fr ./build/*",
    "start": "electron ./src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git@g.aka.moe:quincyhuang/ModernRadioFM975.git"
  },
  "keywords": [
    "ModernMusicRadio"
  ],
  "author": "Quincy Huang",
  "license": "MIT",
  "dependencies": {
    "request": "^2.83.0"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^19.56.0"
  },
  "build": {
    "appId": "ModernMusicRadio",
    "productName": "ModernMusicRadio",
    "copyright": "Copyright © 2018 Quincy Huang",
    "directories": {
      "buildResources": "./src",
      "output": "./build",
      "app": "./src"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./src/app/resources/img/icon.png"
    },
    "nsis": {
      "oneClick": "false",
      "allowToChangeInstallationDirectory": "true",
      "installerLanguages": "zh_CN",
      "createStartMenuShortcut": "false",
      "shortcutName": "摩登音乐台",
      "license": "./LICENSE"
    }
  }
}